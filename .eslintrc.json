{
    "env": {
        "node": true,
        "es2021": true,
        "jest": true
    },
    "extends": ["standard-with-typescript", "prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/strict-boolean-expressions": "off",
      "@typescript-eslint/return-await": "off"
    }
}
